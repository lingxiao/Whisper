# Uncomment the next line to define a global platform for your project
 platform :ios, '14.0'

target 'Whisper' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Whisper

  # streaming audio
  pod 'AgoraRtcEngine_iOS'

  # Firestore
  pod 'Firebase/Analytics'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'

  # UI
  pod 'SwiftEntryKit'
  pod 'NVActivityIndicatorView'

  pod 'Imaginary'
  pod "KeyboardAvoidingView", '~> 5.0'

  # main view layout libs
  pod 'Shuffle-iOS'
  pod 'PopBounceButton'
  pod 'PhoneNumberKit', '~> 3.3'
  pod "Player", "~> 0.13.2"

  # payment
  pod 'Stripe'
  pod 'SwiftyStoreKit'

  target 'WhisperTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'WhisperUITests' do
    # Pods for testing
  end

end



